<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Financial Trail</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinancialTrail.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-expand-md navbar-toggleable-md navbar-light border-bottom box-shadow mb-3" style="background-color:#2d5516">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img id="logo" src="~/img/logo.jpg"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-self-end ps-lg-5">
                    <ul class="navbar-nav flex-grow-1 justify-content-end align-items-baseline">
                        <li class="nav-item">
                            <a class="nav-link text-white yellow-hover" asp-area="" asp-controller="Home" asp-action="Index">
                                <svg bootstrap-icon="GraphUpArrow" width="24" height="24" aria-label="Alarms"></svg> 
                                &nbsp; Indicators
                            </a>
                        </li>
                        <li class="nav-item ps-lg-3">
                            <a class="nav-link text-white yellow-hover" asp-area="" asp-controller="Home" asp-action="DataSource">
                                <svg bootstrap-icon="ClipboardData" width="24" height="24" aria-label="Alarms"></svg> 
                                &nbsp; Data Source
                            </a>
                        </li>
                        <li class="nav-item ps-lg-3">
                            <a class="nav-link text-white yellow-hover" asp-area="" asp-controller="Home" asp-action="Order">
                                <svg bootstrap-icon="CashCoin" width="24" height="24" aria-label="Alarms"></svg>
                                &nbsp; Get Financial Data
                            </a>
                        </li>
                        <li class="nav-item ps-lg-3">
                            <a class="nav-link text-white yellow-hover" asp-area="" asp-controller="Home" asp-action="About">
                                <svg bootstrap-icon="FileEarmarkPerson" width="24" height="24" aria-label="Alarms"></svg>
                                &nbsp; About
                            </a>
                        </li>
                        <li class="nav-item ps-lg-3">
                            <a class="nav-link text-white yellow-hover" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <svg bootstrap-icon="ShieldCheck" width="24" height="24" aria-label="Alarms"></svg>
                                &nbsp; Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#1B330D">
        <div class="container text-center text-white">
            &copy; 2023 - Financial Trail - Indicators for Success
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
